{
  "name": "@nahmii/sdk",
  "version": "0.0.2",
  "description": "The `@nahmii/sdk` package is an SDK to interact with Nahmii 2.0.",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist/**/*.js",
    "dist/**/*.ts",
    "dist/**/*.json"
  ],
  "scripts": {
    "prepublish": "tsc -p ./tsconfig.build.json",
    "build": "tsc -p ./tsconfig.build.json && npm run move-maps",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register -r tsconfig-paths/register 'test/**/*.ts'",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "check-formatting": "prettier --write --list-different '{src,test}/**/*.{js,jsx,html,md,mdx,yaml,json,css,scss,less}'",
    "prettier": "prettier --write '{src,test}/**/*.{js,jsx,html,md,mdx,yaml,json,css,scss,less}'",
    "move-maps": "mkdir -p dist/maps && cpy dist/*.map dist/maps && rimraf dist/*.map",
    "clean": "npm prune && rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nahmii/nahmii-2-sdk.git"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "blockchain",
    "crypto",
    "defi",
    "ethereum",
    "nahmii",
    "smart contracts",
    "SDK"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nahmii/nahmii-2-sdk/issues"
  },
  "homepage": "https://github.com/nahmii/nahmii-2-sdk#readme",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "buffer": "^6.0.3",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "cpy-cli": "^3.1.1",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsdoc": "^37.2.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "ethers": "^5.5.2",
    "lodash": "^4.17.21",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
